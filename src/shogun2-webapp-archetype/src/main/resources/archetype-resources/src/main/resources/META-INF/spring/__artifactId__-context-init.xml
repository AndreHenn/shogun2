#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set(
$symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/jdbc
                           http://www.springframework.org/schema/jdbc/spring-jdbc.xsd">

    <!-- Initialize the ACL database schema on startup -->
    <jdbc:initialize-database data-source="aclDataSource">
        <jdbc:script location="classpath:META-INF/sql/create_acl_schema.sql"/>
    </jdbc:initialize-database>

    <!-- Flag enabling/disabling SHOGun2 initialization on startup -->
    <bean id="shogunInitEnabled" class="java.lang.Boolean">
        <constructor-arg value="${symbol_dollar}{init.shogunInitEnabled}"></constructor-arg>
    </bean>

    <!-- Flag enabling/disabling the deletion of existing ACL data.
         This will only happen if shogunInitEnabled is set to true. -->
    <bean id="deleteAclData" class="java.lang.Boolean">
        <constructor-arg value="${symbol_dollar}{init.deleteAclData}"></constructor-arg>
    </bean>

    <!-- The path to the ACL cleanup script which deletes existing ACL entries. -->
    <bean id="aclCleanupScriptPath" class="java.lang.String">
        <constructor-arg value="${symbol_dollar}{init.aclCleanupScriptPath}"></constructor-arg>
    </bean>

    <!-- Flag enabling/disabling project-specific initialization on startup -->
    <bean id="projectInitEnabled" class="java.lang.Boolean">
        <constructor-arg value="${symbol_dollar}{init.projectInitEnabled}"></constructor-arg>
    </bean>

    <!-- This bean initializes needed database objects or similar -->
    <bean id="contentInitializer" class="${package}.init.ProjectContentInitializer"
        init-method="initializeDatabaseContent" />

</beans>
